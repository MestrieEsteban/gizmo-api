{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext"
    ],
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@/core/*": [
        "core/*"
      ],
      "@/routes/*": [
        "routes/*"
	  ],
	  "@/controllers/*":[
		  "controllers/*"
	  ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}